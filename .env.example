# ─────────────────────────────────────────────────────────────
# NextAuth / Auth.js (v5)
# ─────────────────────────────────────────────────────────────

# REQUIRED – random secret used to sign/encrypt cookies (including PKCE
# code-verifier cookies). Without this, OAuth logins will fail with
# "InvalidCheck: pkceCodeVerifier value could not be parsed".
# Generate with: openssl rand -base64 32
AUTH_SECRET=your-random-secret-min-32-chars

# REQUIRED – base URL of the app (no trailing slash)
# Used by NextAuth to build OAuth redirect URIs.
AUTH_URL=https://your-domain.com

# REQUIRED – Google OAuth credentials (from Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ─────────────────────────────────────────────────────────────
# Auth0 (Universal Login / password recovery)
# ─────────────────────────────────────────────────────────────

AUTH0_DOMAIN=your-tenant.us.auth0.com
# Also accepted: https://your-tenant.us.auth0.com
# Vercel project env key to set: AUTH0_DOMAIN
AUTH0_CLIENT_ID=your-auth0-client-id
# Vercel project env key to set: AUTH0_CLIENT_ID
AUTH0_CLIENT_SECRET=your-auth0-client-secret
# Vercel project env key to set: AUTH0_CLIENT_SECRET
AUTH0_SECRET=your-random-auth0-secret
# Optional explicit issuer override (if omitted, AUTH0_DOMAIN is used)
# Accepted formats: https://your-tenant.us.auth0.com OR your-tenant.us.auth0.com
AUTH0_ISSUER_BASE_URL=https://your-tenant.us.auth0.com
# Optional alias supported by some Auth0 guides
AUTH0_ISSUER=your-tenant.us.auth0.com
APP_BASE_URL=https://your-domain.com

# Optional: Auth0 database connection used for email/password signup/login/recovery
AUTH0_DB_CONNECTION=Username-Password-Authentication

# ─────────────────────────────────────────────────────────────
# MongoDB
# ─────────────────────────────────────────────────────────────

# REQUIRED – full MongoDB Atlas SRV connection string.
# IMPORTANT: the hostname must be a fully-qualified domain name.
# Copy the full string from: Atlas → Connect → Drivers → Connection String.
#
# Correct format:
#   mongodb+srv://username:password@cluster.XXXXX.mongodb.net/dbname
#
# Common mistake (causes "querySrv ENOTFOUND _mongodb._tcp.XXXXX"):
#   mongodb+srv://XXXXX        ← missing the .mongodb.net suffix
MONGODB_URI=mongodb+srv://username:password@cluster.xxxxx.mongodb.net/lva

# Optional – database name inside the cluster (default: lva)
MONGODB_DB=lva

# ─────────────────────────────────────────────────────────────
# B2B Operator Portal
# ─────────────────────────────────────────────────────────────

# Secret used to sign B2B JWT tokens – change from the unsafe default!
# Generate with: openssl rand -base64 32
B2B_JWT_SECRET=your-b2b-jwt-secret-min-32-chars

# API key for the admin operator-management endpoints
# Sent as the "x-admin-secret" request header
ADMIN_SECRET=your-admin-api-key

# ─────────────────────────────────────────────────────────────
# PayPal
# ─────────────────────────────────────────────────────────────

PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=your-paypal-live-client-id
PAYPAL_CLIENT_SECRET=your-paypal-live-secret
PAYPAL_SANDBOX_CLIENT_ID=your-paypal-sandbox-client-id
PAYPAL_SANDBOX_CLIENT_SECRET=your-paypal-sandbox-secret

# Public (client-side) PayPal variables
NEXT_PUBLIC_PAYPAL_MODE=sandbox
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your-paypal-live-client-id
NEXT_PUBLIC_PAYPAL_SANDBOX_CLIENT_ID=your-paypal-sandbox-client-id

# ─────────────────────────────────────────────────────────────
# Email (Nodemailer / SMTP)
# ─────────────────────────────────────────────────────────────

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@laviejaadventures.com
RESERVATION_CC=admin@laviejaadventures.com

# ─────────────────────────────────────────────────────────────
# Twitter / X (optional)
# ─────────────────────────────────────────────────────────────

TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_SECRET=your-twitter-access-secret
